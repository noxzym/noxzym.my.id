{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "include": ["src"],
        "ignore": ["src/components/ui"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100
    },
    "linter": {
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off",
                "useBlockStatements": "off",
                "useImportType": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "preserve",
            "trailingCommas": "none",
            "arrowParentheses": "asNeeded"
        }
    }
}
